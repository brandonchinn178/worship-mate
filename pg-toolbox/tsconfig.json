{
  "extends": "../tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "~test-utils": ["./__test__/utils"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*"]
}
