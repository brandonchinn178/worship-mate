{
  "name": "@worship-mate/server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit --incremental false",
    "test": "TEST_TYPE=unit jest",
    "test:e2e": "TEST_TYPE=e2e jest --runInBand",
    "codegen": "graphql-codegen",
    "migrate": "ts-node -r tsconfig-paths/register bin/migrate.ts",
    "migrate:create": "node-pg-migrate create"
  },
  "dependencies": {
    "@graphql-toolkit/core": "^0.10.7",
    "@graphql-toolkit/graphql-file-loader": "^0.10.7",
    "@graphql-toolkit/schema-merging": "^0.10.7",
    "apollo-datasource": "^0.7.2",
    "apollo-server": "^2.16.1",
    "graphql": "^15.2.0",
    "node-pg-migrate": "^5.5.1",
    "pg-toolbox": "0.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.0",
    "@graphql-codegen/cli": "^1.16.0",
    "@graphql-codegen/typescript": "^1.17.7",
    "@graphql-codegen/typescript-resolvers": "^1.16.0",
    "apollo-server-testing": "^2.15.1",
    "dotenv": "^8.2.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
