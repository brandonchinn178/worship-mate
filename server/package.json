{
  "name": "@worship-mate/server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit --incremental false",
    "test": "TEST_TYPE=unit jest",
    "test:e2e": "TEST_TYPE=e2e jest --runInBand",
    "codegen": "graphql-codegen",
    "migrate": "ts-node -r tsconfig-paths/register bin/migrate.ts",
    "migrate:create": "node-pg-migrate create"
  },
  "dependencies": {
    "@graphql-toolkit/core": "^0.10.7",
    "@graphql-toolkit/graphql-file-loader": "^0.10.7",
    "@graphql-toolkit/schema-merging": "^0.10.7",
    "apollo-datasource": "^0.7.2",
    "apollo-server": "^2.19.0",
    "graphql": "^15.2.0",
    "lodash": "^4.17.20",
    "node-pg-migrate": "^5.8.1",
    "pg-toolbox": "0.0.1",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@types/yup": "^0.29.8",
    "apollo-server-testing": "^2.18.2",
    "dotenv": "^8.2.0",
    "fast-check": "^2.6.0",
    "jest": "^26.6.1",
    "nodemon": "^2.0.6",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  }
}
